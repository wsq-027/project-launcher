{
  "appId": "ProjectLauncher",
  "asar": true,
  "asarUnpack": [
    "node_modules/pm2/**/*"
  ],
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "src/app",
    "src/assets",
    "src/core",
    {
      "from": "dist",
      "to": "src/views"
    }
  ],
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "target": [
      "default"
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  }
}